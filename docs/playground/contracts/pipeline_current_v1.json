{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "pipeline_current_v1",
  "type": "object",
  "required": [
    "schema_version",
    "run_id",
    "state",
    "anomaly_summary",
    "cadence"
  ],
  "properties": {
    "schema_version": {
      "const": "pipeline_current_v1"
    },
    "run_id": {
      "type": "string",
      "minLength": 1
    },
    "state": {
      "type": "object",
      "required": ["schema_version"],
      "properties": {
        "schema_version": { "const": "state_v1" }
      },
      "additionalProperties": true
    },
    "anomaly_summary": {
      "type": "object",
      "required": [
        "total",
        "high_or_critical",
        "latest_timestamp"
      ],
      "properties": {
        "total": { "type": "integer", "minimum": 0 },
        "high_or_critical": { "type": "integer", "minimum": 0 },
        "latest_timestamp": {
          "type": ["string", "null"],
          "format": "date-time"
        }
      },
      "additionalProperties": true
    },
    "cadence": {
      "type": "object",
      "required": [
        "mode",
        "interval_seconds"
      ],
      "properties": {
        "mode": {
          "type": "string",
          "enum": ["baseline", "event"]
        },
        "interval_seconds": {
          "type": "integer",
          "minimum": 1
        }
      },
      "additionalProperties": true
    }
  },
  "additionalProperties": false
}
